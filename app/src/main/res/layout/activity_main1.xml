<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <view android:layout_width="wrap_content" android:layout_height="wrap_content"
          class="kie.com.soundtube.NonSwipeViewPager"
          android:id="@+id/viewpager"
          android:layout_below="@+id/tablayout" android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"/>
    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tablayout"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            app:tabTextAppearance="@style/TextAppearance.StatusBar.EventContent" style="@style/TabLayoutTextStyle">

        <android.support.design.widget.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="Search" android:id="@+id/searchtab"/>
        <android.support.design.widget.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="Video" android:id="@+id/videotab"/>
    </android.support.design.widget.TabLayout>
</RelativeLayout>