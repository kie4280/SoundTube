<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/notPlayingTitle"
        android:layout_width="284dp"
        android:layout_height="55dp"

        android:layout_above="@+id/prevButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:id="@+id/ppButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        android:textAllCaps="false"
        app:srcCompat="@drawable/ic_play_arrow_black_36dp" />

    <ImageView
        android:id="@+id/prevButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_marginEnd="180dp"
        app:srcCompat="@drawable/ic_skip_previous_black_36dp" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        app:srcCompat="@drawable/ic_skip_next_black_36dp" />

    <ImageView
        android:id="@+id/notification_thumbnail"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/White" />

</RelativeLayout>
