<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginBottom="45dp">

    <TextView
        android:id="@+id/notPlayingTitle"
        android:layout_width="228dp"
        android:layout_height="match_parent"

        android:layout_above="@+id/prevButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="156dp" />

    <ImageView
        android:id="@+id/ppButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginEnd="75dp"
        android:textAllCaps="false"
        app:srcCompat="@drawable/ic_play_arrow_black_36dp" />

    <ImageView
        android:id="@+id/prevButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        app:srcCompat="@drawable/ic_skip_previous_black_36dp" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        app:srcCompat="@drawable/ic_skip_next_black_36dp" />

</RelativeLayout>
